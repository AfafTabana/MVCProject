<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Library Management System</title>
    <script src="https://cdn.tailwindcss.com" asp-append-version="true"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" asp-append-version="true">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css" asp-append-version="true">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">

    <environment include="Development">
        <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    </environment>
    <environment exclude="Development">
        <link rel="stylesheet" href="~/css/site.min.css" asp-append-version="true" />
    </environment>
    <style>
        /* Custom animation for navbar items */

        keyframes fadeIn {
        from { opacity: 0; transform: translateY(-10px); }
        to { opacity: 1; transform: translateY(0); }
        }

        .nav-item {
        animation: fadeIn 0.3s ease-out forwards;
        }

        /* Delay each nav item animation */
        .nav-item:nth-child(1) { animation-delay: 0.1s; }
        .nav-item:nth-child(2) { animation-delay: 0.2s; }
        .nav-item:nth-child(3) { animation-delay: 0.3s; }
        .nav-item:nth-child(4) { animation-delay: 0.4s; }
        .nav-item:nth-child(5) { animation-delay: 0.5s; }
        .nav-item:nth-child(6) { animation-delay: 0.6s; }
        .nav-item:nth-child(7) { animation-delay: 0.7s; }
        .nav-item:nth-child(8) { animation-delay: 0.8s; }

        /* Section transition */
        .section {
        min-height: 100vh;
        padding-top: 80px;
        }

        /* Active nav item indicator */
        .active-nav {
        position: relative;
        }



        keyframes underline {
        from { width: 0; }
        to { width: 100%; }
        }
    </style>
</head>
<body class="font-sans bg-gray-50">
    <!-- Header -->
    <header class="w-full bg-white shadow-md z-50">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex justify-between items-center h-16">
                <!-- Logo -->
                <div class="flex-shrink-0 flex items-center">
                    <i class="fas fa-book-open text-blue-500 text-2xl mr-2"></i>
                    <span class="text-xl font-bold text-gray-800">LibraLink</span>
                </div>


                <!-- Mobile menu button -->
                <div class="md:hidden">
                    <button id="mobile-menu-button" class="text-gray-500 hover:text-gray-900 focus:outline-none">
                        <i class="fas fa-bars text-xl"></i>
                    </button>
                </div>

                <!-- Desktop Navigation -->
                <nav class="hidden md:flex space-x-8">
                    <a href="/home/index" class="nav-item text-gray-700 hover:text-blue-600 transition-colors duration-300 active-nav">Home</a>
                    @if (User.IsInRole("Admin"))
                    {
                        <a href="/librarian/getalllibrarians" class="nav-item text-gray-700 hover:text-blue-600 transition-colors duration-300">Librarians</a>
                    }
                  
                    @if (User.IsInRole("Admin") || User.IsInRole("Librarian"))
                    {
                        <a href="/user/getallusers" class="nav-item text-gray-700 hover:text-blue-600 transition-colors duration-300">Users</a>
                    }
                   
                    @if (User.IsInRole("Admin") || User.IsInRole("Librarian"))
                    {
                        <a href="/book/DisplayAllBooksForLibrarian" class="nav-item text-gray-700 hover:text-blue-600 transition-colors duration-300">Books</a>
                    }

                    @if (User.IsInRole("User"))
                    {
                        <a href="/book/DisplayAllBooksForUser" class="nav-item text-gray-700 hover:text-blue-600 transition-colors duration-300">Books</a>
                    }
                  
                    <a href="/home/index/#contact" class="nav-item text-gray-700 hover:text-blue-600 transition-colors duration-300">Contact Us</a>
                    <a href="/home/index/#about" class="nav-item text-gray-700 hover:text-blue-600 transition-colors duration-300">About</a>
                </nav>

                <!-- Auth Buttons -->
                <div class="hidden md:flex items-center space-x-4">

                  
                    @if (User.Identity.IsAuthenticated){
                        <a href="/Account/Logout">
                            <button id="logout-btn" class=" nav-item px-4 py-2 rounded-lg bg-red-600 text-white hover:bg-red-700 transition-colors duration-300">
                                <i class="fas fa-sign-out-alt mr-2"></i> Logout
                            </button>
                        </a>
                    }
                    else
                    {
                        <a href="/Account/Login">
                            <button id="login-btn" class="nav-item px-4 py-2 rounded-lg text-blue-600 hover:bg-blue-50 transition-colors duration-300">
                                <i class="fas fa-sign-in-alt mr-2"></i> Sign In
                            </button>
                        </a>

                        <a href="/Account/Register">
                            <button id="register-btn" class="nav-item px-4 py-2 rounded-lg bg-blue-600 text-white hover:bg-blue-700 transition-colors duration-300">
                                <i class="fas fa-user-plus mr-2"></i> Sign Up
                            </button>
                        </a>

                    }


                </div>
            </div>
        </div>

        <!-- Mobile Navigation -->
        <div id="mobile-menu" class="hidden md:hidden bg-white border-t">
            <div class="px-2 pt-2 pb-3 space-y-1">
                <a href="#home" class="block px-3 py-2 rounded-md text-base font-medium text-gray-700 hover:bg-gray-100">Home</a>
                <a href="#librarians" class="block px-3 py-2 rounded-md text-base font-medium text-gray-700 hover:bg-gray-100">Librarians</a>
                <a href="#users" class="block px-3 py-2 rounded-md text-base font-medium text-gray-700 hover:bg-gray-100">Users</a>
                <a href="#Book" class="block px-3 py-2 rounded-md text-base font-medium text-gray-700 hover:bg-gray-100">Books</a>
                <a href="#contact" class="block px-3 py-2 rounded-md text-base font-medium text-gray-700 hover:bg-gray-100">Contact Us</a>
                <a href="#about" class="block px-3 py-2 rounded-md text-base font-medium text-gray-700 hover:bg-gray-100">About</a>
                <div class="pt-2 border-t">
                    <button id="mobile-login-btn" class="w-full text-left px-3 py-2 rounded-md text-base font-medium text-blue-600 hover:bg-blue-50">
                        <i class="fas fa-sign-in-alt mr-2"></i> Sign In
                    </button>
                    <button id="mobile-register-btn" class="w-full text-left px-3 py-2 rounded-md text-base font-medium bg-blue-600 text-white hover:bg-blue-700 mt-1">
                        <i class="fas fa-user-plus mr-2"></i> Sign Up
                    </button>
                    <button id="mobile-logout-btn" class="hidden w-full text-left px-3 py-2 rounded-md text-base font-medium bg-red-600 text-white hover:bg-red-700 mt-1">
                        <i class="fas fa-sign-out-alt mr-2"></i> Logout
                    </button>
                </div>
            </div>
        </div>
    </header>
    <br />
    <!-- Main Content -->
      @RenderBody()

      <br />
    <!-- Footer -->
    <footer class="bg-gray-800 text-white pt-16 pb-8">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="grid grid-cols-2 md:grid-cols-4 gap-8 mb-12">
                <div>
                    <h3 class="text-lg font-bold mb-4">LibraLink</h3>
                    <p class="text-gray-400 mb-4">Connecting people with knowledge since 1995.</p>
                    <div class="flex space-x-4">
                        <a href="#" class="text-gray-400 hover:text-white"><i class="fab fa-facebook-f"></i></a>
                        <a href="#" class="text-gray-400 hover:text-white"><i class="fab fa-twitter"></i></a>
                        <a href="#" class="text-gray-400 hover:text-white"><i class="fab fa-instagram"></i></a>
                        <a href="#" class="text-gray-400 hover:text-white"><i class="fab fa-linkedin-in"></i></a>
                    </div>
                </div>

                <div>
                    <h3 class="text-lg font-bold mb-4">Quick Links</h3>
                    <ul class="space-y-2">
                        <li><a href="#home" class="text-gray-400 hover:text-white">Home</a></li>
                        <li><a href="#books" class="text-gray-400 hover:text-white">Books</a></li>
                        <li><a href="#events" class="text-gray-400 hover:text-white">Events</a></li>
                        <li><a href="#about" class="text-gray-400 hover:text-white">About Us</a></li>
                        <li><a href="#contact" class="text-gray-400 hover:text-white">Contact</a></li>
                    </ul>
                </div>

                <div>
                    <h3 class="text-lg font-bold mb-4">Services</h3>
                    <ul class="space-y-2">
                        <li><a href="#" class="text-gray-400 hover:text-white">Research Help</a></li>
                        <li><a href="#" class="text-gray-400 hover:text-white">Book Recommendations</a></li>
                        <li><a href="#" class="text-gray-400 hover:text-white">Interlibrary Loans</a></li>
                        <li><a href="#" class="text-gray-400 hover:text-white">Digital Resources</a></li>
                        <li><a href="#" class="text-gray-400 hover:text-white">Children's Programs</a></li>
                    </ul>
                </div>

                <div>
                    <h3 class="text-lg font-bold mb-4">Newsletter</h3>
                    <p class="text-gray-400 mb-4">Subscribe to our newsletter for the latest updates and event announcements.</p>
                    <form class="space-y-2">
                        <input type="email" placeholder="Your email" class="w-full px-4 py-2 rounded-lg bg-gray-700 text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-blue-500">
                        <button type="submit" class="w-full px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors duration-300">Subscribe</button>
                    </form>
                </div>
            </div>

            <div class="border-t border-gray-700 pt-8 flex flex-col md:flex-row justify-between items-center">
                <div class="text-gray-400 mb-4 md:mb-0">
                    &copy; 2023 LibraLink. All rights reserved.
                </div>
                <div class="flex space-x-6">
                    <a href="#" class="text-gray-400 hover:text-white">Privacy Policy</a>
                    <a href="#" class="text-gray-400 hover:text-white">Terms of Service</a>
                    <a href="#" class="text-gray-400 hover:text-white">Sitemap</a>
                </div>
            </div>
        </div>
    </footer>

    
  
   
   
    <environment include="Development">
        <script src="~/js/site.js" asp-append-version="true"></script>
    </environment>
    <environment exclude="Development">
        <script src="~/js/site.min.js" asp-append-version="true"></script>
    </environment>
   <script src="~/lib/jquery/dist/jquery.min.js"></script>
   <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

       @RenderSection("Scripts", required: false)
   
</body>
</html>