@model List<MVCProject.ViewModel.User.DisplayUserViewModel>

@{
    ViewData["Title"] = "All Users";
}

<div class="container my-5" style="margin-top: 80px;">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="card shadow-sm border-0">

                <div class="card-header bg-primary text-white d-flex align-items-center">
                    <h2 class="mb-0"><i class="bi bi-people-fill me-2"></i>@ViewData["Title"]</h2>
                </div>

             @*    <form method="get" action="/user/GetUserByNationalNumber" class="d-flex ms-auto m-2" style="max-width: 350px;">
                    <input type="text" name="nationalNumber" class="form-control me-2" placeholder="Search by National Number" />
                    <button type="submit" class="btn btn-light">
                        <i class="bi bi-search"></i>
                    </button>
                </form> *@

                <div class="card-body bg-light">
                    @if (Model != null && Model.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover align-middle">
                                <thead class="table-primary">
                                    <tr>
                                        <th scope="col">Name</th>
                                        <th scope="col">National Number</th>
                                        <th scope="col">Balance</th>
                                        <th scope="col">City</th>
                                        <th scope="col">Street</th>
                                      @*   <th scope="col">Image</th> *@
                                        <th scope="col">Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var user in Model)
                                    {
                                        <tr>
                                            <td>@user.Name</td>
                                            <td>
                                                <span class="text-monospace">@user.National_Number</span>
                                            </td>
                                            <td>
                                                <span class="badge bg-success">
                                                    @String.Format("{0:C}", user.Balance)
                                                </span>
                                            </td>
                                            <td>@user.City</td>
                                            <td>@user.street</td>
                                           @*  <td>
                                                @if (!string.IsNullOrEmpty(user.ImageUrl))
                                                {
                                                    <img src="@user.ImageUrl" alt="User Image" style="width: 40px; height: 40px; object-fit: cover; border-radius: 50%;" />
                                                }
                                                else
                                                {
                                                    <span class="text-muted">No Image</span>
                                                }
                                            </td> *@
                                            <td>
                                              @*   <a asp-controller="User" asp-action="EditUser" asp-route-nationalNumber="@user.National_Number" class="btn btn-sm btn-warning me-1">
                                                    <i class="bi bi-pencil-square"></i> Edit
                                                </a> *@
                                                <form asp-controller="User" asp-action="DeleteUser" asp-route-name="@user.Name" method="post" class="d-inline">
                                                    <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure you want to delete this user?');">
                                                        <i class="bi bi-trash"></i> Delete
                                                    </button>
                                                </form>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-warning text-center mb-0" role="alert">
                            <i class="bi bi-exclamation-triangle-fill me-2"></i>No users found.
                        </div>
                     @*    <div class="mt-3 text-center">
                            <a asp-controller="User" asp-action="Create" class="btn btn-primary">
                                <i class="bi bi-plus-lg"></i> Add User
                            </a>
                        </div> *@
                    }
                </div>
            </div>
        </div>
    </div>
</div>





