@model RegisterViewModel 

<div id="register-modal" style=" background-color: rgb(240, 247, 255);" class="fixed inset-0 flex items-center justify-center z-50 ">
    <div class="bg-white rounded-lg shadow-xl max-w-md w-full p-6">
        <div class="flex justify-between items-center mb-6">
            <h3 class="text-2xl font-bold text-gray-800">Create Account</h3>
            <a href="/Home/index">
            <button id="close-register-modal" class="text-gray-500 hover:text-gray-700" type="button">
                <i class="fas fa-times"></i>
            </button>
            </a>
        </div>

        <form asp-controller="Account" asp-action="Register" method="post" class="space-y-4">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                <div>
                    <label asp-for="UserName" class="block text-sm font-medium text-gray-700 mb-1">UserName</label>
                    <input asp-for="UserName" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-blue-500 focus:border-blue-500"
                           value="@Model?.UserName"/>
                    <span asp-validation-for="UserName" class="text-red-600 text-sm"></span>
                </div>
               
            </div>

            <div>
                <label asp-for="Email" class="block text-sm font-medium text-gray-700 mb-1">Email</label>
                <input asp-for="Email" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-blue-500 focus:border-blue-500" value="@Model?.Email" />
                <span asp-validation-for="Email" class="text-red-600 text-sm"></span>
            </div>

            <div>
                <label asp-for="Password" class="block text-sm font-medium text-gray-700 mb-1">Password</label>
                <input asp-for="Password" type="password" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-blue-500 focus:border-blue-500"  />
                <span asp-validation-for="Password" class="text-red-600 text-sm"></span>
            </div>

            <div>
                <label asp-for="ConfirmPassword" class="block text-sm font-medium text-gray-700 mb-1">Confirm Password</label>
                <input asp-for="ConfirmPassword" type="password" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-blue-500 focus:border-blue-500" />
                <span asp-validation-for="ConfirmPassword" class="text-red-600 text-sm"></span>
            </div>

            

            <div class="flex items-center mb-4">
                <input asp-for="IsLibrarian" type="checkbox" class="h-4 w-4 text-blue-600 border-gray-300 rounded focus:ring-blue-500" />
                <label asp-for="IsLibrarian" class="ml-2 block text-sm text-gray-700">Register as Librarian</label>
                <span asp-validation-for="IsLibrarian" class="text-red-600 text-sm ml-2"></span>
            </div>

            <div asp-validation-summary="All" class=" text-danger"></div>

            <div>
                <button type="submit" id="register-submit" class="w-full px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors duration-300">
                    Create Account
                </button>
            </div>

            <div class="text-center text-sm text-gray-600">
                Already have an account? <a href="/Account/Login"><button id="switch-to-login" type="button" class="text-blue-600 hover:underline">Sign in</button></a>
            </div>
        </form>
    </div>
</div>
