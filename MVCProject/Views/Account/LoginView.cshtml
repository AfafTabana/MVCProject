@model LoginViewModel

<div id="login-modal" class="fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center z-50 ">
    <div class="bg-white rounded-lg shadow-xl max-w-md w-full p-6">
        <div class="flex justify-between items-center mb-6">
            <h3 class="text-2xl font-bold text-gray-800">Sign In</h3>
            <a href="/Home/index">
            <button id="close-login-modal" class="text-gray-500 hover:text-gray-700" type="button">
                <i class="fas fa-times"></i>
            </button>
            </a>
        </div>

        <form asp-action="Login" asp-controller="Account" method="post" class="space-y-4">
            <div>
                <label asp-for="UserName" class="block text-sm font-medium text-gray-700 mb-1"></label>
                <input asp-for="UserName" type="text" id="login-email" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-blue-500 focus:border-blue-500" />
                <span asp-validation-for="UserName" class="text-red-500 text-xs"></span>
            </div>

            <div>
                <label asp-for="Password" class="block text-sm font-medium text-gray-700 mb-1"></label>
                <input asp-for="Password" type="password" id="login-password" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-blue-500 focus:border-blue-500" />
                <span asp-validation-for="Password" class="text-red-500 text-xs"></span>
            </div>

            <div class="flex items-center justify-between">
                <div class="flex items-center">
                    <input asp-for="RememberMe" id="remember-me" type="checkbox" class="h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded" />
                    <label asp-for="RememberMe" class="ml-2 block text-sm text-gray-700"></label>
                </div>
                <a asp-action="ForgotPassword" asp-controller="Account" class="text-sm text-blue-600 hover:underline">Forgot password?</a>
            </div>
            <div asp-validation-summary="All"  class="text-danger"></div>
            <div>
                <button type="submit" id="login-submit" class="w-full px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors duration-300">
                    Sign In
                </button>
            </div>

            <div class="text-center text-sm text-gray-600">
                Don't have an account?<a href="/Account/Register"> <button id="switch-to-register" type="button" class="text-blue-600 hover:underline">Sign up</button></a>
            </div>

            <div class="relative my-6">
                <div class="absolute inset-0 flex items-center">
                    <div class="w-full border-t border-gray-300"></div>
                </div>
                <div class="relative flex justify-center text-sm">
                    <span class="px-2 bg-white text-gray-500">Or continue with</span>
                </div>
            </div>

            <div class="grid grid-cols-2 gap-3">
                <a asp-controller="ExternalLogin" asp-action="Google" class="w-full inline-flex justify-center py-2 px-4 border border-gray-300 rounded-lg shadow-sm bg-white text-sm font-medium text-gray-700 hover:bg-gray-50">
                    <i class="fab fa-google mr-2"></i> Google
                </a>
                <a asp-controller="ExternalLogin" asp-action="Facebook" class="w-full inline-flex justify-center py-2 px-4 border border-gray-300 rounded-lg shadow-sm bg-white text-sm font-medium text-gray-700 hover:bg-gray-50">
                    <i class="fab fa-facebook-f mr-2"></i> Facebook
                </a>
            </div>
        </form>
    </div>
</div>
