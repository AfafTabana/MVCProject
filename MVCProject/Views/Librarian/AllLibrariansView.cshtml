@model List<DisplayLibrarianViewModel>

@{
    ViewData["Title"] = "All Librarians";
}

<div class="container my-5" style="margin-top: 80px;">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="card shadow-sm border-0">

                <div class="card-header bg-primary text-white d-flex align-items-center">
                    <h2 class="mb-0"><i class="bi bi-people-fill me-2"></i>@ViewData["Title"]</h2>
                </div>

                <form method="get" action="/librarian/GetLibrarianById" class="d-flex ms-auto m-2" style="max-width: 350px;">
                    <input type="text" name="id" class="form-control me-2" placeholder="Search by ID"  />
                    <button type="submit" class="btn btn-light">
                        <i class="bi bi-search"></i>
                    </button>
                </form>





                <div class="card-body bg-light">
                    @if (Model != null && Model.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover align-middle">
                                <thead class="table-primary">
                                    <tr>
                                        <th scope="col">ID</th>
                                        <th scope="col">Name</th>
                                        <th scope="col">Salary</th>
                                        <th scope="col">Hire Date</th>
                                        <th scope="col">National Number</th>
                                        <th scope="col">Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var librarian in Model)
                                    {
                                        <tr>
                                            <td>@librarian.Id</td>
                                            <td>@librarian.Name</td>
                                            <td>
                                                <span class="badge bg-success">
                                                    @String.Format("{0:C}", librarian.Salary)
                                                </span>
                                            </td>
                                            <td>@librarian.HireDate</td>
                                            <td>
                                                <span class="text-monospace">@librarian.National_Number</span>
                                            </td>
                                            <td>
                                                <a asp-controller="Librarian" asp-action="UpdateLibrarianView" asp-route-id="@librarian.Id" class="btn btn-sm btn-warning me-1">
                                                    <i class="bi bi-pencil-square"></i> Edit
                                                </a>
                                                <a asp-controller="Librarian" asp-action="DeleteLibrarian" asp-route-id="@librarian.Id"  class="d-inline">
                                                    <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure you want to delete this librarian?');">
                                                        <i class="bi bi-trash"></i> Delete
                                                    </button>
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                       @*  <div class="mt-3">
                            <a asp-controller="Librarian" asp-action="AddLibrarianView" class="btn btn-primary">
                                <i class="bi bi-plus-lg"></i> Add Librarian
                            </a>
                        </div> *@
                    }
                    else
                    {
                        <div class="alert alert-warning text-center mb-0" role="alert">
                            <i class="bi bi-exclamation-triangle-fill me-2"></i>No librarians found.
                        </div>
                       @*  <div class="mt-3 text-center">
                            <a asp-controller="Librarian" asp-action="Create" class="btn btn-primary">
                                <i class="bi bi-plus-lg"></i> Add Librarian
                            </a>
                        </div> *@
                    }
                </div>
            </div>
        </div>
    </div>
</div>
