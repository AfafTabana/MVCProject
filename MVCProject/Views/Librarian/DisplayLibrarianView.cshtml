@model DisplayLibrarianViewModel

@{
    ViewData["Title"] = "Librarian Details";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="text-center mb-4">
                <h2 class="display-5 fw-bold text-primary">
                    <i class="bi bi-person-badge-fill me-2"></i>@ViewData["Title"]
                </h2>
            </div>

            @if (Model == null)
            {
                <div class="alert alert-warning shadow-sm text-center">
                    <i class="bi bi-exclamation-triangle-fill me-2"></i>No librarian found.
                </div>
            }
            else
            {
                <div class="card shadow-lg border-0">
                    <div class="card-header bg-primary text-white text-center">
                        <h5 class="mb-0"><i class="bi bi-person-lines-fill me-2"></i>Librarian Information</h5>
                    </div>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            <span><strong>ID:</strong></span>
                            <span class="badge bg-secondary fs-6">@Model.Id</span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            <span><strong>Name:</strong></span>
                            <span class="fs-6">@Model.Name</span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            <span><strong>Salary:</strong></span>
                            <span class="badge bg-success fs-6">@Model.Salary.ToString("C")</span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            <span><strong>Hire Date:</strong></span>
                            <span class="fs-6">@Model.HireDate</span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            <span><strong>National Number:</strong></span>
                            <span class="fs-6">@Model.National_Number</span>
                        </li>
                    </ul>
                    <div class="card-footer bg-light text-end">
                        <a href="/librarian/GetAllLibrarians" class="btn btn-outline-primary btn-sm">
                             Back
                        </a>
                        <a asp-controller="Librarian" asp-action="UpdateLibrarianView" asp-route-id="@Model.Id" class="btn btn-sm btn-warning me-1">
                            <i class="bi bi-pencil-square"></i> Edit
                        </a>
                        <a asp-controller="Librarian" asp-action="DeleteLibrarian" asp-route-id="@Model.Id" class="d-inline">
                            <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure you want to delete this librarian?');">
                                <i class="bi bi-trash"></i> Delete
                            </button>
                        </a>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
