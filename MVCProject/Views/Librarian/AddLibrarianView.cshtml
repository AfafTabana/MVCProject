@model AddLibrarianViewModel
@{
    ViewData["Title"] = "Add Librarian";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="AddLibrarian" method="post">
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Salary"></label>
        <input asp-for="Salary" class="form-control" type="number" step="0.01" />
        <span asp-validation-for="Salary" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="HireDate"></label>
        <input asp-for="HireDate" class="form-control" type="date" />
        <span asp-validation-for="HireDate" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="National_Number"></label>
        <input asp-for="National_Number" class="form-control" />
        <span asp-validation-for="National_Number" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Add Librarian</button>
</form>
