@model EditLibrarianViewModel 

@{
    ViewData["Title"] = "Edit Librarian";
}

<body class="bg-gray-50 min-h-screen">
    <div class="max-w-4xl mx-auto p-6">
        <!-- Header -->
        <div class="flex items-center justify-between mb-8 animate-fade-in">
            <div>
                <h2 class="text-3xl font-bold text-primary">Edit Librarian</h2>
            </div>
            <div class="bg-indigo-100 p-4 rounded-full">
                <i class="fas fa-edit text-indigo-600 text-2xl"></i>
            </div>
        </div>

        @if (Model == null)
        {
            <div class="alert alert-warning">
                No librarian data found.
            </div>
        }
        else
        {
            <!-- Form Container -->
            <div class="bg-white rounded-xl shadow-md overflow-hidden animate-fade-in">
                <div class="p-6 sm:p-8">
                    <form asp-action="UpdateLibrarian" method="post" class="space-y-6">

                        <input type="hidden" asp-for="Id" />
                        <input type="hidden" asp-for="ApplicationUserId" />

                        <!-- Name Field -->
                        <div class="form-input border rounded-lg px-4 py-3 transition-all duration-200">
                            <label asp-for="Name" class="block text-sm font-medium text-gray-700 mb-1">
                                <i class="fas fa-user text-primary mr-2"></i>
                                Full Name</label>
                            <div class="flex items-center">
                                <input asp-for="Name" class="w-full outline-none text-gray-700 placeholder-gray-400 form-control" placeholder="John Doe" value="@Model?.Name">
                            </div>
                            <span asp-validation-for="Name" class="text-red-500 text-xs mt-1"></span>
                        </div>

                        <!-- Salary Field -->
                        <div class="form-input border rounded-lg px-4 py-3 transition-all duration-200">
                            <label asp-for="Salary" class="block text-sm font-medium text-gray-700 mb-1">
                                <i class="fas fa-money-bill-wave text-primary mr-2"></i>
                                Salary</label>
                            <div class="flex items-center">
                                <input asp-for="Salary" type="number" step="0.01"
                                       class="w-full outline-none text-gray-700 placeholder-gray-400 form-control"
                                       placeholder="5000.00"
                                       value="@Model?.Salary">
                            </div>
                            <span asp-validation-for="Salary" class="text-red-500 text-xs mt-1"></span>
                        </div>

                        <!-- Hire Date Field -->
                        <div class="form-input border rounded-lg px-4 py-3 transition-all duration-200">
                            <label asp-for="HireDate" class="block text-sm font-medium text-gray-700 mb-1">
                                <i class="fas fa-calendar-alt text-primary mr-2"></i>
                                Hire Date</label>
                            <div class="flex items-center">
                                <input asp-for="HireDate" type="date"
                                       class="w-full outline-none text-gray-700 form-control" value="@Model?.HireDate">
                            </div>
                            <span asp-validation-for="HireDate" class="text-red-500 text-xs mt-1"></span>
                        </div>

                        <!-- National Number Field -->
                        <div class="form-input border rounded-lg px-4 py-3 transition-all duration-200">
                            <label asp-for="National_Number" class="block text-sm font-medium text-gray-700 mb-1">
                                <i class="fas fa-id-card text-primary mr-2"></i>
                                National Number</label>
                            <div class="flex items-center">
                                <input asp-for="National_Number"
                                       class="w-full outline-none text-gray-700 placeholder-gray-400 form-control"
                                       placeholder="1234567890" value="@Model?.National_Number">
                            </div>
                            <span asp-validation-for="National_Number" class="text-red-500 text-xs mt-1"></span>
                        </div>

                        <!-- Form Actions -->
                        <div class="flex flex-col sm:flex-row justify-end gap-4 pt-4">
                            <button type="submit" class="btn btn-primary">
                                Save
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        }
    </div>
</body>
