@model EditLibrarianViewModel 

@{
    ViewData["Title"] = "Edit Librarian";
}

<h2>Edit Librarian</h2>

@if (Model == null)
{
    <div class="alert alert-warning">
        No librarian data found.
    </div>
}
else
{
    <form asp-action="UpdateLibrarian" method="post" class="space-y-6">
        <input type="hidden" asp-for="Id" />

        <div class="form-input border rounded-lg px-4 py-3 transition-all duration-200">
            <label asp-for="Name" class="block text-sm font-medium text-gray-700 mb-1">Full Name</label>
            <div class="flex items-center">

                <input asp-for="Name" class="w-full outline-none text-gray-700 placeholder-gray-400 form-control" placeholder="John Doe" value="@Model?.Name">
            </div>
            <span asp-validation-for="Name" class="text-red-500 text-xs mt-1"></span>
        </div>

        <!-- Salary Field -->
        <div class="form-input border rounded-lg px-4 py-3 transition-all duration-200">
            <label asp-for="Salary" class="block text-sm font-medium text-gray-700 mb-1">Salary</label>
            <div class="flex items-center">

                <input asp-for="Salary" type="number" step="0.01"
                       class="w-full outline-none text-gray-700 placeholder-gray-400 form-control"
                       placeholder="5000.00"
                       value="@Model?.Salary">
            </div>
            <span asp-validation-for="Salary" class="text-red-500 text-xs mt-1"></span>
        </div>

        <!-- Hire Date Field -->
        <div class="form-input border rounded-lg px-4 py-3 transition-all duration-200">
            <label asp-for="HireDate" class="block text-sm font-medium text-gray-700 mb-1">Hire Date</label>
            <div class="flex items-center">

                <input asp-for="HireDate" 
                       class="w-full outline-none text-gray-700 form-control" value="@Model?.HireDate">
            </div>
            <span asp-validation-for="HireDate" class="text-red-500 text-xs mt-1"></span>
        </div>

        <!-- National Number Field -->
        <div class="form-input border rounded-lg px-4 py-3 transition-all duration-200">
            <label asp-for="National_Number" class="block text-sm font-medium text-gray-700 mb-1">National Number</label>
            <div class="flex items-center">

                <input asp-for="National_Number"
                       class="w-full outline-none text-gray-700 placeholder-gray-400 form-control"
                       placeholder="1234567890" value="@Model?.National_Number">
            </div>
            <span asp-validation-for="National_Number" class="text-red-500 text-xs mt-1"></span>
        </div>


        <button type="submit" class="btn btn-primary">Save</button>
    </form>
}
