@model EditBookViewModel

@{
    ViewData["Title"] = "Edit Book";
}

<div class="container mt-5">
    <h2 class="text-primary mb-4 display-6">Edit <span class="fw-semibold">@Model.Title</span></h2>

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <form asp-action="UpdateBook" method="post" class="bg-light p-4 rounded shadow-sm">
        <input type="hidden" asp-for="ID" />

        <div class="row mb-3">
            <div class="col-md-6">
                <div class="mb-3">
                    @* <label asp-for="ID" class="form-label text-primary ">ID</label> *@
                    <input type="hidden" asp-for="ID" disabled class="form-control" />
                    <span asp-validation-for="ID" class="text-danger small"></span>
                </div>
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-md-6">
                <div class="mb-3">
                    <label asp-for="Title" class="form-label text-primary">Title</label>
                    <input asp-for="Title" class="form-control" />
                    <span asp-validation-for="Title" class="text-danger small"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="mb-3">
                    <label asp-for="photo" class="form-label text-primary"></label>
                    <input asp-for="photo" type="file" class="form-control" />
                    <span asp-validation-for="photo" class="text-danger small"></span>
                </div>
            </div>
        </div>

        <div class="mb-3">
            <label asp-for="Description" class="form-label text-primary">Description</label>
            <textarea asp-for="Description" class="form-control" rows="3"></textarea>
            <span asp-validation-for="Description" class="text-danger small"></span>
        </div>

        <div class="row mb-3">
            <div class="col-md-4">
                <div class="mb-3">
                    <label asp-for="Price" class="form-label text-primary">Price</label>
                    <input asp-for="Price" type="number" step="0.01" class="form-control" />
                    <span asp-validation-for="Price" class="text-danger small"></span>
                </div>
            </div>
            <div class="col-md-4">
                <div class="mb-3">
                    <label asp-for="Borrow_Price" class="form-label text-primary">Borrow Price</label>
                    <input asp-for="Borrow_Price" type="number" class="form-control" />
                    <span asp-validation-for="Borrow_Price" class="text-danger small"></span>
                </div>
            </div>
            <div class="col-md-4">
                <div class="mb-3">
                    <label asp-for="Cat_Id" class="form-label text-primary">Category ID</label>
                    <input asp-for="Cat_Id" type="number" class="form-control" />
                    <span asp-validation-for="Cat_Id" class="text-danger small"></span>
                </div>
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-md-6">
                <div class="mb-3">
                    <label asp-for="Author_Name" class="form-label text-primary">Author Name</label>
                    <input asp-for="Author_Name" class="form-control" />
                    <span asp-validation-for="Author_Name" class="text-danger small"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="mb-3">
                    <label asp-for="Publisher_Name" class="form-label text-primary">Publisher Name</label>
                    <input asp-for="Publisher_Name" class="form-control" />
                    <span asp-validation-for="Publisher_Name" class="text-danger small"></span>
                </div>
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-md-6">
                <div class="mb-3">
                    <label asp-for="Borrow_quantity" class="form-label text-primary">Borrow Quantity</label>
                    <input asp-for="Borrow_quantity" type="number" class="form-control" />
                    <span asp-validation-for="Borrow_quantity" class="text-danger small"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="mb-3">
                    <label asp-for="Buy_quantity" class="form-label text-primary">Buy Quantity</label>
                    <input asp-for="Buy_quantity" type="number" class="form-control" />
                    <span asp-validation-for="Buy_quantity" class="text-danger small"></span>
                </div>
            </div>
        </div>

        <div class="mt-4">
            <button type="submit" class="btn btn-success px-4">Save Changes</button>
            <a asp-action="DisplayAllBooksForLibrarian" class="btn btn-outline-secondary ms-3">Cancel</a>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
