@model AddBookViewModel

@{
    ViewData["Title"] = "Add New Book";
    SelectList CatList = new SelectList(Model.Cat_list, "Id", "Name");
}

<h2 class="text-xl font-semibold mb-4">Add New Book</h2>

<form asp-action="AddBook" method="post" class="max-w-xl bg-white p-6 rounded shadow space-y-4">
    <div>
        <label asp-for="Title" class="block text-sm font-medium text-gray-700">Title</label>
        <input asp-for="Title" class="mt-1 block w-full border border-gray-300 rounded px-3 py-2" />
        <span asp-validation-for="Title" class="text-red-500 text-xs" ></span>
    </div>

    <div>
        <label asp-for="Description" class="block text-sm font-medium text-gray-700">Description</label>
        <textarea asp-for="Description" class="mt-1 block w-full border border-gray-300 rounded px-3 py-2"></textarea>
        <span asp-validation-for="Description" class="text-red-500 text-xs" ></span>
    </div>

    <div>
        <label asp-for="ImageUrl" class="block text-sm font-medium text-gray-700">Image URL</label>
        <input asp-for="ImageUrl" class="mt-1 block w-full border border-gray-300 rounded px-3 py-2" />
        <span asp-validation-for="ImageUrl" class="text-red-500 text-xs" ></span>
    </div>

    <div>
        <label asp-for="Price" class="block text-sm font-medium text-gray-700">Price</label>
        <input asp-for="Price" type="number" step="0.01" class="mt-1 block w-full border border-gray-300 rounded px-3 py-2" />
        <span asp-validation-for="Price" class="text-red-500 text-xs"></span>
    </div>

    <div>
        <label asp-for="Borrow_Price" class="block text-sm font-medium text-gray-700">Borrow Price</label>
        <input asp-for="Borrow_Price" type="number" class="mt-1 block w-full border border-gray-300 rounded px-3 py-2" />
        <span asp-validation-for="Borrow_Price" class="text-red-500 text-xs" ></span>
    </div>

    <div>
        <label asp-for="Borrow_quantity" class="block text-sm font-medium text-gray-700">Borrow Quantity</label>
        <input asp-for="Borrow_quantity" type="number" class="mt-1 block w-full border border-gray-300 rounded px-3 py-2" />
        <span asp-validation-for="Borrow_quantity" class="text-red-500 text-xs" ></span>
    </div>

    <div>
        <label asp-for="Buy_quantity" class="block text-sm font-medium text-gray-700">Buy Quantity</label>
        <input asp-for="Buy_quantity" type="number" class="mt-1 block w-full border border-gray-300 rounded px-3 py-2" />
        <span asp-validation-for="Buy_quantity" class="text-red-500 text-xs" ></span>
    </div>

    <div>
        <label asp-for="Author_Name" class="block text-sm font-medium text-gray-700">Author Name</label>
        <input asp-for="Author_Name" class="mt-1 block w-full border border-gray-300 rounded px-3 py-2" />
        <span asp-validation-for="Author_Name" class="text-red-500 text-xs" ></span>
    </div>

    <div>
        <label asp-for="Publisher_Name" class="block text-sm font-medium text-gray-700">Publisher Name</label>
        <input asp-for="Publisher_Name" class="mt-1 block w-full border border-gray-300 rounded px-3 py-2" />
        <span asp-validation-for="Publisher_Name" class="text-red-500 text-xs" ></span>
    </div>

    <div class="form-group">
        <label asp-for="Cat_Id" class="form-label">Categeory</label>
        <select class=" form-control"
                asp-for="Cat_Id"
                asp-items="@CatList">

            <option value="0">-- Select Categeory --</option>
        </select>
        <span asp-validation-for="Cat_Id" class="text-danger"></span>
    </div>

    <div class="pt-4">
        <button type="submit" class="bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700">Add Book</button>
        <a asp-action="DisplayAllBooksForUser" class="ml-4 text-gray-600 hover:underline">Cancel</a>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
<script src="~/lib/jquery/dist/jquery.js/jquery.min.js"></script>
<script src="~/lib/jquery-validation/dist/jquery.validate.js/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js/jquery.validate.unobtrusive.min.js"></script>



