@model List<DisplayBookForLibrarianViewModel>

@{
    ViewData["Title"] = "SearchBooksLibrarianView";
}
<div class="overflow-x-auto">
    <form asp-action="SearchBookByTitleForLibrarian" method="get" class="flex space-x-2">
        <input type="text"
               name="title"
               placeholder="Search by title..."
               class="border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500" />
        <button type="submit" class="bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700">
            Search
        </button>
    </form>
    <br />
    <table class="min-w-full table-auto border border-gray-200 text-sm">
        <thead class="bg-gray-100">
            <tr>
                <th class="px-4 py-2 text-left border-b">Image</th>
                <th class="px-4 py-2 text-left border-b">Title</th>
                <th class="px-4 py-2 text-left border-b">Author</th>
                <th class="px-4 py-2 text-left border-b">Category</th>
                <th class="px-4 py-2 text-left border-b">Price</th>
                <th class="px-4 py-2 text-left border-b">Edit</th>
                <th class="px-4 py-2 text-left border-b">Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var book in Model)
            {
                <tr class="hover:bg-gray-50">
                    <td class="px-4 py-2 border-b">
                        <img src="@book.ImageUrl" alt="Book cover" class="h-16 object-contain">
                    </td>
                    <td class="px-4 py-2 border-b">@book.Title</td>
                    <td class="px-4 py-2 border-b">@book.Author_Name</td>
                    <td class="px-4 py-2 border-b">@book.Categeory_Name</td>
                    <td class="px-4 py-2 border-b">@book.Price</td>
                    <td class="px-4 py-2 border-b">
                        <a asp-action="EditBook" asp-route-id="@book.ID" class="text-blue-600 hover:underline">Edit</a>
                    </td>
                    <td class="px-4 py-2 border-b">
                        <form asp-action="DeleteBook" asp-route-id="@book.ID" method="post" onsubmit="return confirm('Are you sure you want to delete this book?');">
                            <button type="submit" class="text-red-600 hover:underline">Delete</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <div class="mt-4">
        <a asp-action="AddingBook" class="inline-block bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700">
            Add New Book
        </a>
    </div>
</div>
