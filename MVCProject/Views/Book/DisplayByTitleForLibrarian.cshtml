@model List<DisplayBookForLibrarianViewModel>

@{
    ViewData["Title"] = "Search Books";
}

<div class="container mx-auto mt-6 px-4">
    <h2 class="text-2xl font-semibold text-gray-800 mb-4">Search Results</h2>

    <form asp-action="SearchBookByTitleForLibrarian" method="get" class="flex flex-col sm:flex-row sm:space-x-3 space-y-3 sm:space-y-0 mb-6">
        <input type="text"
               name="title"
               placeholder="Search by title..."
               class="flex-1 border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500" />
        <button type="submit" class="bg-blue-600 text-white px-5 py-2 rounded hover:bg-blue-700">
            Search
        </button>
    </form>

    <div class="overflow-x-auto bg-white shadow rounded">
        <table class="min-w-full table-auto text-sm text-left border border-gray-200">
            <thead class="bg-gray-100 text-gray-700 uppercase">
                <tr>
                    <th class="px-4 py-3 border-b">Image</th>
                    <th class="px-4 py-3 border-b">Title</th>
                    <th class="px-4 py-3 border-b">Author</th>
                    <th class="px-4 py-3 border-b">Category</th>
                    <th class="px-4 py-3 border-b">Price</th>
                    <th class="px-4 py-3 border-b">Edit</th>
                    <th class="px-4 py-3 border-b">Delete</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var book in Model)
                {
                    <tr class="hover:bg-gray-50">
                        <td class="px-4 py-3 border-b">
                            <img src="@book.ImageUrl" alt="Book cover" class="h-16 w-12 object-cover rounded">
                        </td>
                        <td class="px-4 py-3 border-b">@book.Title</td>
                        <td class="px-4 py-3 border-b">@book.Author_Name</td>
                        <td class="px-4 py-3 border-b">@book.Categeory_Name</td>
                        <td class="px-4 py-3 border-b text-green-600 font-medium">@book.Price.ToString("C")</td>
                        <td class="px-4 py-3 border-b">
                            <a asp-action="EditBook" asp-route-id="@book.ID" class="text-blue-600 hover:underline">Edit</a>
                        </td>
                        <td class="px-4 py-3 border-b">
                            <form asp-action="DeleteBook" asp-route-id="@book.ID" method="post" onsubmit="return confirm('Are you sure you want to delete this book?');">
                                <button type="submit" class="text-red-600 hover:underline">Delete</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div class="mt-6">
        <a asp-action="AddingBook" class="inline-block bg-blue-600 text-white px-5 py-2 rounded hover:bg-blue-700">
            + Add New Book
        </a>
    </div>
</div>
