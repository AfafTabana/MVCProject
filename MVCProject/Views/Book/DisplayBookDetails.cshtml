@model DisplayBookUserViewModel

@{
    ViewData["Title"] = "Book Details";
}

<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 mt-6">
    <div class="bg-white rounded-lg shadow-md overflow-hidden hover:shadow-lg transition-shadow duration-300 transform hover:-translate-y-1">
        <div class="h-64 bg-gray-100 flex items-center justify-center">
            <img src="@Model.ImageUrl" alt="Book cover" class="h-full object-contain">
        </div>
        <div class="p-4 space-y-1">
            <h3 class="font-bold text-gray-800 text-lg">@Model.Title</h3>
            <p class="text-gray-600 text-sm">Author: <span class="text-black">@Model.Author_Name</span></p>
            <p class="text-gray-600 text-sm">Category: <span class="text-black">@Model.Categeory_Name</span></p>
            <p class="text-gray-600 text-sm">Price: <span class="text-black">@Model.Price</span></p>
            <p class="text-gray-600 text-sm">Borrow Price: <span class="text-black">@Model.Borrow_Price</span></p>
            <p class="text-gray-600 text-sm">Available to Borrow: <span class="text-black">@Model.Borrow_quantity</span></p>
            <p class="text-gray-600 text-sm">Available to Buy: <span class="text-black">@Model.Buy_quantity</span></p>
            <p class="text-gray-700 text-sm mt-2">@Model.Description</p>
        </div>
    </div>
</div>
