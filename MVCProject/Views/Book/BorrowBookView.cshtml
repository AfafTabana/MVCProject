@model MVCProject.ViewModel.Book.BorrowBookViewModel

@{
    ViewData["Title"] = "BorrowBookView";
}

<div class="row justify-content-center">
    <div class="col-lg-6 col-md-8">
        <div class="card shadow-sm rounded-4 border-0">
            <div class="card-body p-4">
                <h4 class="mb-3 fw-bold text-center">Borrow Book</h4>
                <form asp-controller="Book" asp-action="BorrowBook">
                    <div asp-validation-summary="ModelOnly" class="text-danger small mb-3"></div>

                    <div class="mb-3">
                        <label asp-for="BookId" class="form-label">Book ID</label>
                        <input asp-for="BookId" class="form-control" readonly />
                        <span asp-validation-for="BookId" class="text-danger small"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="UserId" class="form-label">User ID</label>
                        <input asp-for="UserId" class="form-control" readonly />
                        <span asp-validation-for="UserId" class="text-danger small"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="BorrowDate" class="form-label">Borrow Date</label>
                        <input asp-for="BorrowDate" class="form-control" readonly />
                        <span asp-validation-for="BorrowDate" class="text-danger small"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="DueDate" class="form-label">Due Date</label>
                        <input asp-for="DueDate" class="form-control" />
                        <span asp-validation-for="DueDate" class="text-danger small"></span>
                    </div>

                    <div class="mb-4">
                        <label asp-for="Price" class="form-label">Price</label>
                        <input asp-for="Price" class="form-control" readonly />
                        <span asp-validation-for="Price" class="text-danger small"></span>
                    </div>

                    <div class="d-grid">
                        <input type="submit" value="Borrow" class="btn btn-primary fw-semibold py-2" />
                    </div>
                </form>

                <div class="mt-4 text-center">
                    <a asp-action="DisplayAllBooksForUser" asp-controller="Book" class="btn btn-outline-primary btn-sm">
                        ← Back to List
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
