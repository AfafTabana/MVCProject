@model List<DisplayBookUserViewModel>

@{
    ViewData["Title"] = "BooksUserView";
}

<div class="container mt-5">
    <!-- Search Form -->
    <form asp-action="SearchBookByTitle" method="get" class="mb-4">
        <div class="input-group">
            <input type="text" name="title" placeholder="Search by title..." class="form-control" />
            <button type="submit" class="btn btn-primary">
                <i class="fas fa-search me-1"></i> Search
            </button>
        </div>
    </form>

    <!-- Books Grid -->
    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-5 g-4">
        @foreach (var book in Model)
        {
            <div class="col">
                <div class="card h-100 border-0 shadow-sm rounded-4">
                    <!-- Book Image -->
                    <div class="card-img-top d-flex align-items-center justify-content-center bg-light" style="height: 200px;">
                        <img src="@book.ImageUrl" alt="Book cover" class="img-fluid p-2" style="max-height: 100%;">
                    </div>

                    <!-- Card Body -->
                    <div class="card-body">
                        <h6 class="card-title text-truncate fw-semibold mb-1">@book.Title</h6>
                        <p class="text-muted small mb-1">@book.Author_Name</p>

                        <p class="small mb-1">
                            @if (book.Buy_quantity > 0)
                            {
                                <span class="text-success">Buy: @book.Buy_quantity left</span>
                            }
                            else
                            {
                                <span class="text-danger fw-bold">Buy: Out of Stock</span>
                            }
                        </p>

                        <p class="small mb-2">
                            @if (book.Borrow_quantity > 0)
                            {
                                <span class="text-success">Borrow: @book.Borrow_quantity left</span>
                            }
                            else
                            {
                                <span class="text-danger fw-bold">Borrow: Out of Stock</span>
                            }
                        </p>

                        <div class="d-flex justify-content-between align-items-center">
                            <span class="badge bg-secondary bg-opacity-10 text-dark">@book.Categeory_Name</span>
                            <div class="text-end">
                                <i class="fas fa-star text-warning me-1 small"></i>
                                <span class="text-muted small">@book.Price.ToString("C")</span>
                            </div>
                        </div>
                    </div>

                    <!-- view button -->

                    <a href="@Url.Action("DisplayBookById", "Book", new { id = book.ID })"
                       class="position-absolute top-0 end-0 m-2 text-decoration-none text-dark"
                       title="View Details">
                        <i class="fas fa-eye text-secondary"></i>
                    </a>

                    <!-- Card Footer -->
                    <div class="card-footer bg-white border-0 d-flex justify-content-between pt-2">
                        @if (book.Buy_quantity > 0)
                        {
                            <a href="@Url.Action("BuyBook", "Book", new { id = book.ID })" class="btn btn-sm btn-outline-primary px-3">
                                Buy
                            </a>
                        }
                        else
                        {
                            <button class="btn btn-sm btn-outline-secondary px-3" disabled>Buy</button>
                        }

                        @if (book.Borrow_quantity > 0)
                        {
                            <a href="@Url.Action("BorrowBookView", "Book", new { id = book.ID })" class="btn btn-sm btn-outline-success px-3">
                                Borrow
                            </a>
                        }
                        else
                        {
                            <button class="btn btn-sm btn-outline-secondary px-3" disabled>Borrow</button>
                        }
                    </div>
                </div>
            </div>
        }
    </div>
</div>
