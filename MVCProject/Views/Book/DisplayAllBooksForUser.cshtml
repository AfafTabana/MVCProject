@model List<DisplayBookUserViewModel>

@{
    ViewData["Title"] = "BooksUserView";
}
<form asp-action="SearchBookByTitle" method="get" class="flex space-x-2">
    <input type="text"
           name="title"
           placeholder="Search by title..."
           class="border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500" />
    <button type="submit" class="bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700">
        Search
    </button>
</form>
<br />
<div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-5 gap-6">

    @foreach (var book in Model)
    {
        <div class="bg-white rounded-lg shadow-md overflow-hidden hover:shadow-lg transition-shadow duration-300 transform hover:-translate-y-1">
            <div class="h-48 bg-gray-100 flex items-center justify-center">
                <img src="@book.ImageUrl" alt="Book cover" class="h-full object-contain">
            </div>
            <div class="p-4">
                <h3 class="font-bold text-gray-800 mb-1 text-sm truncate">@book.Title</h3>
                <p class="text-gray-600 text-xs mb-2">@book.Author_Name</p>
                <p class="text-gray-600 text-xs mb-2">@book.AvailableQuantity</p> <p>books left</p>
                <div class="flex justify-between items-center">
                    <span class="text-xs text-gray-500">@book.Categeory_Name</span>
                    <div class="flex items-center">s
                        <i class="fas fa-star text-yellow-400 text-xs mr-1"></i>
                        <span class="text-xs text-gray-600">@book.Price</span>
                    </div>
                </div>
            </div>
            <a class="btn btn-primary" href="@Url.Action("BuyBook", "Book", new { id = book.ID })">Buy</a>
        </div>
       
    }
</div>



