@model BuyBookViewModel
@{
    ViewData["Title"] = "Borrow";
}

<h2>Buy @Model.BookTitle</h2>

<form asp-action="ConfirmBorrowing" method="post">
    <input type="hidden" asp-for="BookId" />
    <div class="form-group">
        <label>Price: @Model.Price</label><br />
    </div>
    <div class="form-group">
    </div>
    <button type="submit" class="btn btn-success">Confirm Borrowing</button>
</form>

