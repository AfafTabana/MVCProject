@model MVCProject.ViewModel.Auth.RoleViewModel

@{
    ViewData["Title"] = "Create";
}




<div class="row justify-content-center">
    <div class="col-lg-5 col-md-6">
        <div class="bg-white border rounded-4 shadow-sm p-4">
            <div class="mb-4 text-center border-bottom pb-3">
                <h2 class="h5 fw-bold mb-1">Create Role</h2>
                <p class="text-muted mb-0 small">Please enter the role name below.</p>
            </div>

            <form asp-action="Create">
                <div asp-validation-summary="All" class="text-danger mb-3 small"></div>

                <div class="mb-3">
                    <label asp-for="RoleName" class="form-label fw-semibold">Role Name</label>
                    <input asp-for="RoleName" class="form-control rounded-2" placeholder="Enter role name..." />
                    <span asp-validation-for="RoleName" class="text-danger small"></span>
                </div>

                <div class="d-grid mt-4">
                    <input type="submit" value="Create" class="btn btn-primary fw-semibold py-2" />
                </div>
            </form>

            <div class="mt-3 text-center">
                <a asp-action="Index" asp-controller="Home" class="text-decoration-none small">← Back to List</a>
            </div>
        </div>
    </div>
</div>


